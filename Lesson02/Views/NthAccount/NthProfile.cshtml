@{
    ViewData["Title"] = "Profiles";
    var accounts = ViewBag.Accounts as List<Lesson02.Models.NthAccount>;
}

<h2>All Profiles</h2>

@foreach (var account in accounts)
{
    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@account.Avatar" class="img-fluid rounded-start" alt="Avatar" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@account.Name</h5>
                    <p class="card-text"><strong>Email:</strong> @account.Email</p>
                    <p class="card-text"><strong>Phone:</strong> @account.Phone</p>
                    <p class="card-text"><strong>Address:</strong> @account.Address</p>
                    <p class="card-text"><strong>Bio:</strong> @account.Bio</p>
                    <p class="card-text"><strong>Gender:</strong> @(account.Gender == 1 ? "Male" : "Female")</p>
                    <p class="card-text"><strong>Birthday:</strong> @account.Birthday.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
        </div>
    </div>
}
<p>
    <a asp-controller="NthAccount" asp-action="NthIndex" class="btn btn-danger">Back to list</a>
</p>
